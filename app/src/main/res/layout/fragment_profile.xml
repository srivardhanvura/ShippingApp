<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/dp" />

    <TextView
        android:id="@+id/pro_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="No Name"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pro_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pro_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="No Email"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pro_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pro_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="No Phone number"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/missingTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pro_num"
        android:layout_marginTop="15dp"
        android:text="Looks like your profile is incomplete. Do you want to complete it?"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/missingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/missingTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn"
        android:text="Edit" />

</RelativeLayout>