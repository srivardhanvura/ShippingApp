<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/emailSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/emailRec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailSender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/senderLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailRec"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/senderLoc"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recLoc"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dist_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vol_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dist_range"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cost_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vol_range"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btn_home4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cost_text"
            android:layout_marginTop="20dp"
            android:text="@string/view_pricing_as_per_weight"
            android:textColor="@color/max_red"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/btn2_home4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_home4"
            android:layout_marginTop="20dp"
            android:textStyle="italic"
            android:text="@string/view_pricing_as_per_distance"
            android:textColor="@color/max_red" />

        <Button
            android:id="@+id/btn3_home4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn2_home4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn"
            android:text="Confirm"
            android:textAllCaps="false" />

    </RelativeLayout>

</ScrollView>