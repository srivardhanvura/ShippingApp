<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFragment2">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pic2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/dp" />

    <Button
        android:id="@+id/editBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="-45dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/pic2"
        android:background="@drawable/ic_edit" />

    <EditText
        android:id="@+id/pro_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pic2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:enabled="false"
        android:hint="No Name"
        android:inputType="none"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/pro_email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pro_name2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:enabled="false"
        android:hint="No Email"
        android:inputType="none"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/pro_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pro_email2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="No Phone number"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/subPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pro_num2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn"
        android:text="Submit" />

</RelativeLayout>